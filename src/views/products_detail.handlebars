<section style="display: flex; align-items:center; margin-top: 2rem; margin-bottom: 5rem;">
    <div class="container">
        <div id="carouselExampleFade" class="carousel slide carousel-fade">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://dummyimage.com/600x400/000/fff&text=image1" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://dummyimage.com/600x400/000/fff&text=image2" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://dummyimage.com/600x400/000/fff&text=image3" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
