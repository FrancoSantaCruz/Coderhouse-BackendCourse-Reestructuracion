            <div class="card text-center">
                {{#if product.status}}
                <div class="card-header text-success">
                    Available
                </div>
                {{else}}
                <div class="card-header text-danger">
                    Unavailable
                </div>
                {{/if}}
                <div class="card-body">
                    <h5 class="card-title">{{product.title}}</h5>
                    <p class="card-text">ARS${{product.price}}</p>
                    <p class="card-text">Stock: {{product.stock}}</p>
                    <form action="/api/carts/{{@root.user.cart._id}}/products/{{product._id}}" method="post">
                        <button type="submit" class="btn btn-outline-dark mt-auto ms-2"><i
                                class="bi bi-cart"> Add to cart</i></button>
                    </form>
                </div>
                <div class="card-footer text-body-secondary">
                    {{product.category}}
                </div>
            </div>
        </div>
</section>